#include<stdio.h>
int main()
{
    int num_of_rows,row,space,star;
    scanf("%d",&num_of_rows);
    for(row=1;row<=(num_of_rows);row++)
    {
        for(space=(num_of_rows-row);space>=1;space--)
        {
            printf(" ");
        }
        for(star=1;star<=(row*2)-1;star++)
        {
            printf("*");
        }
        printf("\n");
    }
}
